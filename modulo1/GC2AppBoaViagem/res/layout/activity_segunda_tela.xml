<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.divus.academia.android.GC2AppBoaViagem.SegundaTelaActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imgNovoGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="70dp"
            android:contentDescription="@string/desc_novo_gasto"
            android:src="@drawable/novo_gasto" />
        
        <ImageView
            android:id="@+id/imgNovaViagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="70dp"
            android:contentDescription="@string/desc_nova_viagem"
            android:src="@drawable/nova_viagem" />

        <ImageView
            android:id="@+id/imgConfiguracoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgNovoGasto"
            android:layout_centerHorizontal="true"
            android:paddingRight="70dp"
            android:contentDescription="@string/desc_configuracoes"
            android:src="@drawable/configuracoes" />
        
        <ImageView
            android:id="@+id/imgMinhasViagens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgNovaViagem"
            android:layout_centerHorizontal="true"
            android:paddingLeft="70dp"
            android:contentDescription="@string/desc_minhas_viagens"
            android:src="@drawable/minhas_viagens" />

    </RelativeLayout>

</LinearLayout>
